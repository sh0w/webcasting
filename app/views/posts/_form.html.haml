= form_for @post, :html => { :class => 'form-horizontal' } do |f|

  = f.text_field :title, :label => false, :class => 'text_field', :placeholder => "Title"
  = f.text_field :project_url, :label => false, :class => 'text_field', :placeholder => "Project Url"
  = f.text_area :content, :label => false, :class => 'text_area', :rows => 10, :placeholder => "Content"
  .message-actions
    = f.submit nil, :class => 'btn-send'
    /= link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'
