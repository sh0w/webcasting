- model_class = Post
.page-header
  %h1= @post.title


%p.clearfix
  = link_to image_tag(@post.user.image.url(:thumb)), @post.user
  .meta
    .author
      = link_to @post.user.name || @post.user.email, @post.user
      = "from #{@post.user.city}, #{@post.user.country}" if not @post.user.city.blank? and not @post.user.country.blank?
    .date= "#{time_ago_in_words(@post.created_at)} ago"
%p
  = @post.content

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), posts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(@post), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
