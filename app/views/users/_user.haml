%div.user.clearfix
  .name= user.name || "No name"
  - if not user.id == current_user.id
    .like
      - if current_user.voted_as_when_voted_for user
        = link_to "", unlike_path(user.id), :class => 'unlike-i', :title => 'Undo prebook'
      - else
        = link_to "", like_path(user.id), :class => 'like-i', :title => 'Prebook'
  .info
    - if not user.city.blank? and not user.country.blank?
      %p= "from #{user.city || 'City'}, #{user.country || 'Country'}"
  = link_to image_tag(user.image.url(:medium)), user
  .description
    = user.skills