%section#ps-container.ps-container
  .ps-contentwrapper
    .ps-content
      %h2
        =@user.name
        %br>/
        %span
          from #{@user.city || "[city]"}, #{@user.country || "[country]"}
        %span
          born #{@user.birthdate || "[birthdate]"}
      %p= @user.description
      %p= @user.looking_for
  //ps-contentwrapper
  .ps-slidewrapper
    .ps-slides
      %div{:style => "background-image:url("+@user.image.url(:medium)+");"}
    %nav
      %a.ps-prev{:href => "#"}
      %a.ps-next{:href => "#"}
  //ps-slidewrapper
//ps-container
